    <div id="main-container"></div>

    <script>

        const xhttp = new XMLHttpRequest(); //Creates the HTML request.

        xhttp.open("GET", "https://localhost:7042/AboutUs"); // THis is what retrieves the data from the API.
        xhttp.send(); 
        xhttp.onload = function() { //function that takes the data that was retrieved, takes the value from the key (it's in JSON format), and sets the text to the page.
          const response = this.responseText;
          const data = JSON.parse(response); //Parsed the response from the API call so that we can pull the "text" field out of the json.
          //const styledText = 
          document.getElementById('main-container').innerHTML = `<p style="color: black; font-size: 24px;">${data.text}</p>`; //This adds the text to the about page.
        }

        

    </script>
</body>